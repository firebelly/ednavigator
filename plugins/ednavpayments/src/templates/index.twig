{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("firebelly\\ednavpayments\\assetbundles\\ednavpayments\\EdnavpaymentsAsset") %}

{# The title of this CP section #}
{% set title = "EdNavigator Payment Logs" %}

{# Content that should appear in the page header #}
{% block actionButton %}
    <div class="buttons">
        <a href="/admin/settings/plugins/ednavpayments" class="btn submit">{{ "Settings"|t('ednavpayments') }}</a>
    </div>
{% endblock %}

{# The content of the CP Section#}
{% block content %}
    <h2>Order management handled via <a target="_blank" rel="noopener" href="https://dashboard.stripe.com/orders/">Stripe &nearr;</a></h2>
    {% set logs = craft.payments.getPayments() %}
    <table class="data fullwidth ednavpayments-logs">
        <thead>
        <tr>
          <th scope="col" class="log-date">Date</th>
          <th scope="col" class="log-summary">Summary</th>
          <th scope="col" class="log-log">Log</th>
        </tr>
        </thead>
        <tbody>
          {% for log in logs %}
            <tr>
              <td>{{ log.dateUpdated }}</td>
              <td class="summary"><strong>{{ log.summary|raw }}</strong></td>
              <td class="log"><pre>{{ log.log|raw }}</pre></td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
{% endblock %}
